@{
    ViewData["Title"] = "Home";
}@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Management System - Home</title>

    <!-- Link to Typed.js -->
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>

    <style>
        nav {
            background-color: #34495E;
            padding: 10px;
            text-align: center;
            position: absolute; /* Fixes navbar to the top */
            top: 0;
            width: 100%;
            z-index: 1000; /* Ensures it stays above other content */
        }

        main {
            margin-top: 60px; /* Pushes main content below the navbar */
            padding: 20px;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #2C3E50;
            color: #ECF0F1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            text-align: center;
        }

        h1 {
            font-size: 48px;
            color: #F1C40F;
            margin-bottom: 10px;
        }

        .typed-text {
            font-size: 24px;
            color: #ECF0F1;
            margin-top: 20px;
        }

        .btn-container {
            margin-top: 40px;
        }

        .btn {
            padding: 12px 30px;
            background-color: #3498DB;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-right: 15px;
            text-decoration: none;
        }

            .btn:hover {
                background-color: #2980B9;
            }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            text-align: center;
            padding: 10px;
            background-color: #34495E;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to the Task Management System</h1>

        <div class="typed-text">
            <span id="typed"></span>
        </div>

        <div class="btn-container">
            <a href="@Url.Action("Index", "Task")" class="btn">View Tasks</a>
            <a href="@Url.Action("Create", "Task")" class="btn">Create New Task</a>
        </div>
    </div>

    <footer>
        &copy; 2024 Task Management System
    </footer>

    <script>
        var typed = new Typed('#typed', {
            strings: [
                "Organize your tasks efficiently.",
                "Set priorities and deadlines.",
                "Manage your work, personal, and study tasks.",
                "Stay on top of your progress."
            ],
            typeSpeed: 40,
            backSpeed: 5,
            loop: true
        });
    </script>
</body>
</html>
